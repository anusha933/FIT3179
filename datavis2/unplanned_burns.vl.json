{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Australian unplanned burns by year with correct join structure",
  "title": "Unplanned Burns in Australia (2016â€“2021)",
  "width": 600,
  "height": 500,
  "data": {
    "url": "unplanned_burns.csv"
  },
  "transform": [
    {
      "lookup": "State",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/rowanhogan/australian-states/master/states.topojson",
          "format": {"type": "topojson", "feature": "states"}
        },
        "key": "properties.STATE_NAME",
        "fields": ["geometry"]
      },
      "as": "geo"
    },
    {
      "filter": "datum.Year == '2019-2020'"
    }
  ],
  "mark": {"type": "geoshape", "stroke": "white"},
  "encoding": {
    "shape": {"field": "geo", "type": "geojson"},
    "color": {
      "field": "Burns",
      "type": "quantitative",
      "title": "Number of Unplanned Burns",
      "scale": {"scheme": "orangered"}
    },
    "tooltip": [
      {"field": "State", "title": "State"},
      {"field": "Year", "title": "Year"},
      {"field": "Burns", "title": "Unplanned Burns"}
    ]
  },
  "projection": {"type": "mercator", "center": [133, -28], "scale": 850},
  "config": {"view": {"stroke": "transparent"}}
}
