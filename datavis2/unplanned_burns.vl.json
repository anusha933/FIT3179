{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "autosize": {"resize": true},

  "vconcat": [
    {
      "title": "Australian States / Territories",
      "width": 800,
      "height": 400,
      "projection": {
        "type": "mercator",
        "center": [133, -28],
        "scale": 850
      },
      "data": {
        "url": "https://raw.githubusercontent.com/anusha933/FIT3179/main/datavis2/au-states-topo.json",
        "format": {
          "type": "topojson",
          "feature": "austates"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f5f5f5",
        "stroke": "white",
        "strokeWidth": 1
      }
    },

    {
      "title": "Unplanned Burns by State (2019â€“2020)",
      "width": 700,
      "data": {
        "url": "https://raw.githubusercontent.com/anusha933/FIT3179/main/unplanned_burns.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        { "filter": "datum.Year === '2019-2020'" },
        {
          "calculate": "toNumber(datum.Burns)",
          "as": "BurnsNum"
        },
        {
          "calculate": "datum.StateCode === 'ACT' ? 'Australian Capital Territory' : datum.StateCode === 'NSW' ? 'New South Wales' : datum.StateCode === 'NT' ? 'Northern Territory' : datum.StateCode === 'QLD' ? 'Queensland' : datum.StateCode === 'SA' ? 'South Australia' : datum.StateCode === 'TAS' ? 'Tasmania' : datum.StateCode === 'VIC' ? 'Victoria' : datum.StateCode === 'WA' ? 'Western Australia' : datum.StateCode",
          "as": "StateNameFull"
        }
      ],
      "mark": {"type": "bar"},
      "encoding": {
        "x": {
          "field": "BurnsNum",
          "type": "quantitative",
          "title": "Unplanned Burns"
        },
        "y": {
          "field": "StateNameFull",
          "type": "nominal",
          "sort": "-x",
          "title": null
        },
        "color": {
          "field": "BurnsNum",
          "type": "quantitative",
          "scale": {"scheme": "orangered"},
          "legend": null
        },
        "tooltip": [
          {"field": "StateNameFull", "type": "nominal", "title": "State"},
          {"field": "BurnsNum", "type": "quantitative", "title": "Unplanned Burns"},
          {"field": "Year", "type": "nominal", "title": "Year"}
        ]
      }
    }
  ],

  "config": {}
}
